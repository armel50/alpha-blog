
<% if @article.errors.any? %> 
    <% @article.errors.full_messages.each do |msg|%> 
       <p> <%= msg %> </p>
    <% end %>
<% end %>
<%= form_for @article do |f| %> 


    <p>
        <%= f.label :title %>
        <%= f.text_field :title %> 

        <%= f.label :description %> 
        <%= f.text_area :description%>

        <%=f.submit%>
    </p>
  <%= link_to 'Back to all the index', articles_path %>
<% end %>